					                <sap.ui.layout.form:formElements>
					                    <sap.ui.layout.form:FormElement label="Nombre" id="element0">
					                        <sap.ui.layout.form:fields>
					                            <Input width="100%" id="SubsName" value="{/SubsName}"/>
					                        </sap.ui.layout.form:fields>
					                    </sap.ui.layout.form:FormElement>
					                    <sap.ui.layout.form:FormElement label="Apellidos" id="element1">
					                        <sap.ui.layout.form:fields>
					                            <Input width="100%" id="SubsSurname" value="{/SubsSurname}"/>
					                        </sap.ui.layout.form:fields>
					                    </sap.ui.layout.form:FormElement>
					                    <sap.ui.layout.form:FormElement label="Email" id="element2">
					                        <sap.ui.layout.form:fields>
					                            <Input width="100%" id="SubsEmail" value="{/SubsEmail}"/>
					                        </sap.ui.layout.form:fields>
					                    </sap.ui.layout.form:FormElement>
					                </sap.ui.layout.form:formElements>
					            </sap.ui.layout.form:FormContainer>
					        </sap.ui.layout.form:formContainers>
