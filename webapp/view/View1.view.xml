<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="SubscriptionForm.SubscriptionForm.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
