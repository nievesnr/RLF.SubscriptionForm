					        </sap.ui.layout.form:layout></sap.ui.layout.form:Form>
					</content>
				<footer>
				    <Bar id="bar0">
				        <contentRight>
				            <Button xmlns="sap.m" text="Suscribirse" id="btSubscription" type="Accept" press="onSendPress"/>
				        </contentRight>
				    </Bar>
				</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>